ARG adminer_version=%%VERSION%%

PKG git-tiny

# Plugins & Designs
CMD git clone --depth 1 --branch "v${adminer_version}" https://github.com/vrana/adminer.git /tmp/adminer
CMD mkdir -p /adminer
CMD mv /tmp/adminer/plugins /adminer
CMD mv /tmp/adminer/designs /adminer
CMD rm -rf /tmp/adminer
PKG --remove git-tiny
PKG --autoremove
# Adminer
CMD fetch -o /tmp/adminer.php "https://github.com/vrana/adminer/releases/download/v${adminer_version}/adminer-${adminer_version}.php"

INCLUDE pkgs.makejail
